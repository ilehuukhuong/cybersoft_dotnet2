@page "/CustomerContactForm"
@using Session26_validation_component_razor.Models

<EditForm Model="contactModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="container mt-6">
        <div class="d-flex gap-5">
            <div class="form-container w-50">
                <div class="text-center">
                    <h1>Customer Contact Form</h1>
                </div>
                <div class="form-group">
                    <label>Full Name *</label>
                    <input @bind="contactModel.FullName" class="form-control">
                    <ValidationMessage For="@(() => contactModel.FullName)" />
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input @bind="contactModel.Email" class="form-control">
                    <ValidationMessage For="@(() => contactModel.Email)" />
                </div>
                <div class="form-group">
                    <label>Phone Number *</label>
                    <input @bind="contactModel.PhoneNumber" class="form-control">
                    <ValidationMessage For="@(() => contactModel.PhoneNumber)" />
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input @bind="contactModel.Address" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Message *</label>
                    <textarea @bind="contactModel.Message" class="form-control" rows="4"
                        style="resize: none"></textarea>
                    <ValidationMessage For="@(() => contactModel.Message)" />
                </div>
                <div class="form-group">
                    <label>Select service *</label>
                    <select @bind="contactModel.Services" class="form-control">
                        <option value="">Choose.....</option>
                        <option value="service1">service 1</option>
                        <option value="service2">service 2</option>
                        <option value="service3">service 3</option>
                    </select>
                    <ValidationMessage For="@(() => contactModel.Services)" />
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" @bind="contactModel.Agree" />
                    <label class="form-check-label">I agree to the terms and conditions *</label>
                    <ValidationMessage For="@(() => contactModel.Agree)" />
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>
    </div>
</EditForm>
@code {
    private CustomerContactModel contactModel = new CustomerContactModel();
    private void HandleValidSubmit()
    {
        Console.WriteLine("Form submitted");
    }
}